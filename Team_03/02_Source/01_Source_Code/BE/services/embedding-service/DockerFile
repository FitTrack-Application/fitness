# Base image nhẹ
FROM python:3.10-slim

# Tạo user non-root
RUN useradd -m appuser
WORKDIR /app

# Tối ưu: chỉ copy requirements trước để cache tốt
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy code sau (nếu thay đổi code, không làm mất cache của pip install)
COPY . .

# Chạy bằng non-root user
USER appuser

# CMD run server
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
